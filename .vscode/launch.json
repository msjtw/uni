  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: debug",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "justMyCode": true,
      "stopOnEntry": true,
    },
    {
      "name": "g++: debug from file",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/zz_exe/${fileBasenameNoExtension}",
      "args": [
        "<",
        "${workspaceFolder}/debug.in"
      ],
      "stopAtEntry": true,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "miDebuggerPath": "/usr/bin/gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": false
        }
      ],
      "preLaunchTask": "C/C++: g++ build active file"
    },
    {
      "name": "g++: debug",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/zz_exe/${fileBasenameNoExtension}",
      "args": [],
      "stopAtEntry": true,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "miDebuggerPath": "/usr/bin/gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": false
        }
      ],
      "preLaunchTask": "C/C++: g++ build active file"
    }
  ]
}